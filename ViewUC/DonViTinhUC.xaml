<UserControl x:Class="DoAnTotNghiepBanThuong.ViewUC.DonViTinhUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DoAnTotNghiepBanThuong.ViewUC"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="#e0f2f1" CornerRadius="20">
        <Grid>
            <Grid.RowDefinitions>

                <RowDefinition Height="70" ></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0 0 20 0" HorizontalAlignment="Right" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0"  Margin="20 0 0 0">
                    <TextBox
                        Width="150"
                    Background="White"
Height="49.96"
VerticalAlignment="Center"
materialDesign:HintAssist.Hint="Tìm kiếm"
AcceptsReturn="True"
Style="{StaticResource MaterialDesignOutlinedTextBox}"
TextWrapping="Wrap"/>
                </Grid>
                <Button x:Name="ThemDonViWindow" Background="#80deea" BorderBrush="#80deea"  Click="ThemDonViWindow_Click" Grid.Column="1" HorizontalAlignment="Left" Margin="10 0 0 0" Width="125" Height="49.96">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="plus" Height="20" Width="20" VerticalAlignment="Center"/>
                        <TextBlock FontSize="16" VerticalAlignment="Center" Text="Thêm mới"/>
                    </StackPanel>
                </Button>
            </Grid>
            <Border Margin="10" Grid.Row="1" CornerRadius="20" Background="White" BorderBrush="#cfd8dc" BorderThickness="0.5">
                <Grid>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <ListView x:Name="listViewDonVi" >
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Mã đơn vị" DisplayMemberBinding="{Binding IdDonVi}"></GridViewColumn>
                                    <GridViewColumn Header="Tên đơn vị" DisplayMemberBinding="{Binding TenDonVi}" ></GridViewColumn>
                                    <GridViewColumn Header="Hành động">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Button x:Name="SuaDonViWindow" BorderBrush="Black" Background="Transparent" Click="SuaDonViWindow_Click"  >
                                                        <materialDesign:PackIcon Kind="Pencil"/>
                                                    </Button>
                                                    <Button x:Name="XoaDonVi" BorderBrush="Black" Background="Transparent" Click="XoaDonVi_Click" Margin="10 0 0 0" >
                                                        <materialDesign:PackIcon Kind="Close"/>
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
